package com.java.TowerPower.Model;

import com.java.TowerPower.TowerPowerConstants;

public class Player {
	
	private int gold;
	private String name;
	
	public Player() {
		gold = TowerPowerConstants.STARTING_GOLD;
		setName("Player 1");
	}

	public int getGold() {
		return gold;
	}

	public void setGold(int gold) {
		this.gold = gold;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}
	
	public void decrementGold(int value) {
		this.gold -= value;
	}
	public void incrementGold(int value) {
		this.gold += value;
	}
	
	

}
